package ex03_number;

public class Ex02 {

	public static void main(String[] args) {

		// 증감 연산
		// 1씩 증가하거나 감소하는 연산
		// 증가는 ++, 감소는 --를 사용한다.
		
		// 전위 연산(pre operator)
		// ++a
		// 변수 a의 값을 1 증가시키고 사용한다. 사용할때는 원래의 a 값을 사용한다.
		int a = 1;
		int b = a++;
		System.out.println(a);
		System.out.println(b);
		
		// 후위 연산(post oprator)
		// a++
		// 변수 a의 값을 사용하고나서 1 증가시킨다.
		int x = 1;
		int y = x++;
		System.out.println(x);
		System.out.println(y);

	}

}
